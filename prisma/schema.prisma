generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String
  provider Provider
  streams  Stream[]
  upvotes  Upvote[]
}

model Upvote {
  id         String   
  userId     String
  streamId   String
  user       User        @relation(fields: [userId], references:[id])
  stream     Stream      @relation(fields: [StreamId], references:[id])
}

model Stream {
  id        String      @id @default(uuid())
  type      StreamType
  active    Boolean     @default(true)
  upvotes   Upvotes[]
  userId    String
  user      user        @relation(fields: [userId], references:[id]) 
}

enum StreamType {
  Spotify
  Youtube
}



enum Provider {
  GOOGLE
}
