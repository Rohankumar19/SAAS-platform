generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  email String
  provider Provider
  role Role
}

model Stream {
  id        String      @id @default(uuid())
  type      StreamType
  active    Boolean     @default(true)
  upvotes   Int
  userId    String
  user      user        @relation(fields: [userId], references:[id]) 
}

enum StreamType {
  Spotify
  Youtube
}

enum Role {
  Streamer
  EndUser
}

enum Provider {
  GOOGLE
}
